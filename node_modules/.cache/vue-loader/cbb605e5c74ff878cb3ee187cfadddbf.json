pped: false,\n          liked: false,\n          color: `${colors[Math.floor(Math.random() * colors.length)]}`\n        };\n        this.$emit(\"addCardTrigger\", card);\n        this.notes = \"\";\n        this.front = \"\";\n        this.back = \"\";\n        this.error = false;\n      }\n    }\n  }\n};\n",{"version":3,"sources":["AddNewCard.vue"],"names":[],"mappings":";;;;;;;;;;;;;;;;;;;;;;;;;AAyBA;AACA;;AAEA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;;AAEA;AACA;AACA;;AAEA;AACA;AACA;;AAEA;AACA;AACA;;AAEA;AACA;AACA;;AAEA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA;AACA","file":"AddNewCard.vue","sourceRoot":"src/components","sourcesContent":["<template>\n  <div class=\"addcard-box\" :class=\"{ '-showerror': error }\">\n    <div class=\"form-box\">\n      <label>\n        <input\n          @keypress.enter=\"addCard\"\n          v-model=\"notes\"\n          :class=\"{ '-error': error }\"\n          type=\"text\"\n          class=\"input\"\n          placeholder=\"Enter Notes\"\n        />\n      </label>\n      <button @click=\"addCard()\" type=\"button\" class=\"addcard\">\n        Generate Flash Card\n      </button>\n    </div>\n    <!-- end of add card box -->\n    <span :class=\"{ '-show': error }\" class=\"error\"\n      >Oops! Flashcards must be completed by filling the \"Enter Notes\" field.</span\n    >\n  </div>\n</template>\n\n<script>\nconst uuidv4 = require(\"uuid/v4\");\nconst colors = [\"-orange\", \"-red\", \"-purple\", \"-blue\", \"-green\"];\n\nexport default {\n  name: \"AddNewCard\",\n  data() {\n    return {\n      front: \"\",\n      back: \"\",\n      notes: \"\",\n      error: false\n    };\n  },\n  methods: {\n\n    underline(word) {\n      return \"<u>\" + word + \"</u>\";\n    },\n\n    getFrontBack() {\n      //notes = this.notes;\n      // Call backend to recieve keywords\n\n      // Example end of function\n      let summary = \"A common technology for front end development is Vue.js.\";\n      let keyword = \"Vue.js\";\n\n      this.front = summary.replace(keyword, \"____\");\n      this.back = summary.replace(keyword, this.underline(keyword));\n    },\n\n    addCard() {\n      if (!this.notes) {\n        this.error = true;\n      } else {\n        this.getFrontBack();\n        const card = {\n          id: uuidv4(),\n          front: this.front,\n          back: this.back,\n          flipped: false,\n          liked: false,\n          color: `${colors[Math.floor(Math.random() * colors.length)]}`\n        };\n        this.$emit(\"addCardTrigger\", card);\n        this.notes = \"\";\n        this.front = \"\";\n        this.back = \"\";\n        this.error = false;\n      }\n    }\n  }\n};\n</script>\n\n<style scoped lang=\"sass\">\n@import 'src/assets/sass/_variables.sass';\n\n.addcard-box\n  margin-top: 40px\n  margin-bottom: .5rem\n  transition: margin-bottom .3s\n  &.-showerror\n    margin-bottom: 2rem\n    .error\n      opacity: 1\n      visibility: visible\n  .error\n    margin-top: 15px\n    display: block\n    font-size: 0.8571rem\n    color: red\n    opacity: 0\n    transition: all .5s\n    visibility: hidden\n    line-height: 1.4\n\n.form-box\n  display: flex\n  justify-content: center\n  @media (max-width: 700px)\n    flex-direction: column\n    align-items: center\n    label\n      max-width: 300px\n      width: 100%\n  .input, .addcard\n    padding-left: 20px\n    padding-right: 20px\n    height: 40px\n    border-width: 1px\n    border-style: solid\n    border-radius: $radius\n    display: inline-block\n    @media (max-width: 700px)\n      max-width: 300px\n      width: 100%\n  .input\n    border-color: $input-border\n    font-size: 1.071rem\n    color: $muted\n    transition: border-color .3s\n    @media (min-width: 701px)\n      margin-right: 1.3rem\n    @media (max-width: 700px)\n      margin-bottom: 1rem\n    &:hover\n      border-color: darken($input-border, 20%)\n    &.-error\n      border-color: red\n    &:not(.-error):focus\n      border-color: $highlight\n\n.addcard\n  background-color: $highlight\n  border-color: $highlight\n  color: white\n  box-shadow: 0 0 8px 1px rgba(96,69,255,0.28)\n  transition: background-color .3s\n  font-weight: $medium\n  &:hover\n    background-color: darken($highlight, 5%)\n</style>\n"]}]}